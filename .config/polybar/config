[bar/main]
width = 100%
height = 36
offset-x = 0%
;offset-y = 1%
radius = 0
fixed-center = true

enable-ipc = true
background = ${colours.background}
foreground = ${colours.foreground}

line-size = 6
line-colour = ${colours.foreground}

padding-right = 1

font-0 = FiraCode Nerd Font Mono:size=13;2
font-1 = Font Awesome 6 Free:size=14;2
font-2 = Font Awesome 6 Free Solid:size=14;2
font-3 = Font Awesome 6 Brands:size=14;2
font-4 = Font Awesome v4 Compatibility:size=14;2

