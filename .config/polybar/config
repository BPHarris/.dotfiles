[module/dwm]
type = internal/dwm
format = <label-tags> <label-layout> <label-floating>
socket-path = /tmp/dwm.sock

enable-tags-click = true
enable-tags-scroll = true
tags-scroll-empty = false
tags-scroll-reverse = false
tags-scroll-wrap = true
enable-layout-click = true
enable-layout-scroll = true
layout-scroll-wrap = true
layout-scroll-reverse = true

; If enable-layout-click = true, clicking the layout symbol will switch to this layout
secondary-layout-symbol = [M]

; Tagas:
; Available tokens:
;   %name%

label-floating = F

label-title = %title%
label-title-maxlen = 35
label-title-padding = 2
label-title-foreground = ${colours.foreground}
label-title-background = ${colours.background}

label-layout = %symbol%
label-layout-padding = 2
label-layout-foreground = ${colours.foreground}
label-layout-background = ${colours.background}

; focused = Active tag on focused monitor
label-focused = %name%
label-focused-background = ${colours.tag-focused-background}
label-focused-foreground = ${colours.foreground}
label-focused-padding = 1
label-focused-font = 2

; unfocused = Inactive tag on any monitor
label-unfocused = %name%
label-unfocused-background = ${colours.tag-unfocused-background}
label-unfocused-foreground = ${colours.foreground}
label-unfocused-padding = 1
label-unfocused-font = 2

; visible = Active tag on unfocused monitor
label-visible = %name%
label-visible-background = ${colours.tag-visible-background}
label-visible-foreground = ${colours.foreground}
