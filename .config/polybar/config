[module/network]
; https://github.com/polybar/polybar/wiki/Module:-network
type = internal/network
interval = 1.0
ping-interval = 1.0

interface = eth0
speed-unit = ""

; Connected
format-connected = <label-connected>
label-connected =  %downspeed%  %upspeed%

; Disconnected
format-disconnected = <label-disconnected>
label-disconnected =  No Internet
label-disconnected-foreground = ${colours.red}

; Spacing
format-connected-padding = 1
format-connected-underline = ${colours.blue}

format-disconnected-padding = 1
format-disconnected-underline = ${colours.red}

format-packetloss-padding = 1
format-packetloss-underline = ${colours.blue}



[module/audio]
; https://github.com/polybar/polybar/wiki/Module:-pulseaudio
type = internal/pulseaudio
interval = 1

; Unmuted
format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%

; Muted
format-muted = <label-muted>
label-muted = %percentage%%

format-muted-prefix = 
format-muted-prefix-padding-right = 2
format-muted-prefix-foreground = ${colours.yellow}

; Ramp Volume
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

ramp-volume-padding-right = 1

; Spacing
format-volume-padding = 1
format-volume-underline = ${colours.blue}

format-muted-padding = 1
format-muted-underline = ${colours.yellow}



[module/date]
; https://github.com/polybar/polybar/wiki/Module:-date
type = internal/date
interval = 1

date = "%a %d-%m-%Y"
time = "%I:%M %p"

format = <label>
label = %date% %time%

; Spacing
format-padding = 1
format-underline = ${colours.blue}


