{
    "hyprland/workspaces" : {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{}",
        "format-icons": {
			"urgent": "",
			"active": "",
			"default": "",
			"empty": ""
        }
    },
    "hyprland/window": {
        "rewrite": {
            "(.*) - Brave": "$1",
            "(.*) - Chromium": "$1",
            "(.*) - Brave Search": "$1",
            "(.*) - Outlook": "$1",
            "(.*) Microsoft Teams": "$1"
        },
        "separate-outputs": true
    },

    "custom/exit": {
        "format": "ÔÄë",
        "tooltip-format": "Powermenu",
        "on-click": "wlogout -b 4",
        "tooltip": false
    },

    "custom/g703": {
        "exec": "~/.config/waybar/scripts/mouse_battery.sh",
        "return-type": "json",
        "interval": 30,
        "format": "{}",
        "on-click": "solaar"
    },

    "tray": {
        "icon-size": 16,
        "spacing": 12
    },

    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
		"format": "{:%Y-%m-%d %H:%M}",
        "format-alt": "{:%Y-%m-%d}"
    },


    "cpu": {
        "format": " C {usage:>3}% ",
        "on-click": "alacritty -e htop"
    },
    "memory": {
        "format": "| M {percentage:>3}%  ",
        "on-click": "alacritty -e htop"
    },

    "disk": {
        "interval": 30,
        "format": "D {percentage_used}% ",
        "path": "/",
        "on-click": "alacritty -e htop"
    },

    "hyprland/language": {
        "format": "/ K {short}"
    },

    "group/hardware": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": false
        },
        "modules": [
            "custom/system",
            "disk",
            "cpu",
            "memory",
            "hyprland/language"
        ]
    },

    "network": {
        "format": "üåê",
        "format-disconnected": "‚ùå", //An empty format will hide the module.
        "tooltip-format": "Ôûñ {ifname} via {gwaddri}",
        "tooltip-format-wifi": "Ôá´  {essid} ({ipaddr}/{cidr}) ({signalStrength}%)",
        "tooltip-format-ethernet": "ÔÉÅ  {ifname} ({ipaddr}/{cidr})",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "alacritty -e nmtui"
    },

    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}   {capacity}%",
        "format-charging": "Ôóß  {capacity}%",
        "format-plugged": "Ôá¶  {capacity}%",
        "format-alt": "{icon}  {time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "]
    },

    "pulseaudio": {
        "scroll-step": 1, // %, can be a float
        "format": "{icon} {volume}% {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄ® ", "ÔÄ® "]
        },
        "on-click": "pavucontrol"
    },

    "bluetooth": {
        "format-disabled": "",
        "format-off": "",
        "interval": 30,
        "on-click": "blueman-manager",
        "format-no-controller": ""
    },

    "user": {
        "format": "{user}",
        "interval": 60,
        "icon": false
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "tooltip": true,
        "format-icons":{
            "activated": "ÔèÅ",
            "deactivated": "ÔÄ£"
        },
        "on-click-right": "hyprlock"
    }
}

